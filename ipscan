#!/bin/bash
echo "/$$   /$$             /$$                                            "
echo "| $$$ | $$            | $$                                           "
echo "| $$$$| $$  /$$$$$$  /$$$$$$   /$$$$$$$  /$$$$$$$  /$$$$$$  /$$$$$$$ "
echo "| $$ $$ $$ /$$__  $$|_  $$_/  /$$_____/ /$$_____/ |____  $$| $$__  $$"
echo "| $$  $$$$| $$$$$$$$  | $$   |  $$$$$$ | $$        /$$$$$$$| $$  \ $$"
echo "| $$\  $$$| $$_____/  | $$ /$$\____  $$| $$       /$$__  $$| $$  | $$"
echo "| $$ \  $$|  $$$$$$$  |  $$$$//$$$$$$$/|  $$$$$$$|  $$$$$$$| $$  | $$"
echo "|__/  \__/ \_______/   \___/ |_______/  \_______/ \_______/|__/  |__/"
echo " by jhuesser"



subnet=$1
for ip in $(seq 1 254); do ping -c 1 ${subnet}.$ip>/dev/null; [ $? -eq 0 ] && echo "${subnet}.$ip UP" `nslookup ${subnet}.$ip`|| : ; done
